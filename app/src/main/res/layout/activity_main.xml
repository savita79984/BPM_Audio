<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvAudioFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:text="@string/select_audio"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvSelectBMP"
        android:layout_below="@+id/tvAudioFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:text="@string/select_bmp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etBmp"
        android:layout_below="@+id/tvAudioFile"
        android:layout_toRightOf="@+id/tvSelectBMP"
        android:layout_width="match_parent"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="20sp"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:hint="BMP"/>

    <Button
        android:id="@+id/btnChangeBmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/etBmp"
        android:text="Change BMP"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:textColor="@android:color/black"
        android:padding="20dp"
        android:layout_below="@+id/btnChangeBmp"
        android:text="Start"/>

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnStart"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:textColor="@android:color/black"
        android:padding="20dp"
        android:layout_below="@+id/btnChangeBmp"
        android:text="Stop"/>

</RelativeLayout>